<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="sirs.grupo7.securepayment.Start"
                android:background="#0099cc"
                android:orientation="vertical"
                android:weightSum="3">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:text="@string/start_two_steps"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:layout_weight="0.5"
        android:textStyle="bold"/>


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:text="@string/start_two_steps2"
        android:textSize="15sp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:layout_weight="0.5"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.7"
            android:gravity="center"
            android:textSize="30sp"
            android:id="@+id/matrix_cod1" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/matrix_input_cod1"
            android:layout_weight="0.3"
            android:textSize="30sp"
            android:maxLength="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.7"
            android:textSize="30sp"
            android:id="@+id/matrix_cod2" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/matrix_input_cod2"
            android:layout_weight="0.3"
            android:textSize="30sp"
            android:maxLength="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.7"
            android:textSize="30sp"
            android:id="@+id/matrix_cod3" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/matrix_input_cod3"
            android:layout_weight="0.3"
            android:textSize="30sp"
            android:maxLength="1" />
    </LinearLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:text="@string/button_submit_transaction"
        android:id="@+id/button_start_submit"
        android:layout_weight="0.3"/>

</LinearLayout>
